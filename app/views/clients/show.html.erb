<h2>Client Information</h2>
<p>
  <strong>Name:</strong>
  <%= @client.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @client.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @client.email %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @client.phone %>
</p>

<p>
  <strong>Comments:</strong>
  <%= @client.comment %>
</p>

<h2>Horses</h2>
<% @client.horses.each do |horse| %>
  <p>
    <%= horse.name %> : <%= horse.comment %>
  </p>
<% end %>
<p><p>
<h3>Add a horse:</h3>
<%= form_for([@client, @client.horses.build]) do |f| %>
  <p>
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Back', clients_path %>

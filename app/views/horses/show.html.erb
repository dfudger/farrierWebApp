<h1>My Horse</h1>

<p>
  <strong>Name:</strong>
  <%= @horse.name %>
</p>
<p>
  <strong>Owner:</strong>
  <%= @client.name %>
</p>
<p>
  <strong>Comments about <%=@horse.name %>:</strong>
  <%= @horse.comment %>
</p>

<h2>Appointments</h2>
<%= render @horse.appointments %>

<h4>Add a appointment:</h4>
<%= form_for([@horse, @horse.appointments.build]) do |f| %>
  <p>
    <%= f.label :start %><br>
    <%= f.datetime_field :start %> <br>
  </p>
  <p>
    <%= f.label :end %><br>
    <%= f.datetime_field :end %><br>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %><br>
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

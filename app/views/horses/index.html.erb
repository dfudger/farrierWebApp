<p id="notice"><%= notice %></p>

<h1>My Horses</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Photo</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @horses.each do |horse| %>
      <tr>
        <td><%= horse.name %></td>
        <td><%= horse.photo %></td>
        <td><%= horse.comment %></td>
        <td><%= link_to 'Show', client_horse_path(horse.client, horse) %></td>
        <td><%= link_to 'Edit', edit_client_horse_path(horse.client, horse) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

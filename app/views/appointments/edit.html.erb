<h1>Edit Appointment</h1>

<%= form_for :appointment, url: horse_appointment_path(@horse, @appointment), method: :patch do |f| %>
  <p>
    <%= f.label :start %><br>
    <%= f.datetime_field :start %> <br>
  </p>
  <p>
    <%= f.label :end %><br>
    <%= f.datetime_field :end %><br>
  </p>
  <p>
    <%= f.label :location %><br>
    <%= f.text_field :location %><br>
  </p>
  <p>
    <%= f.label :comment %><br>
    <%= f.text_area :comment %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
